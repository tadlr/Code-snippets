{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @ingroup templates
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
	{# his ensures that, if clean URLs are off, the 'q' is added first, as a hidden form element, so that it shows up first in the POST URL. #}
	{{ q }}
{% endif %}
{% set exclude = [
   'title',
   'type',
    'category',
   'business',
   'items_per_page',
   'actions',
] %}
<div class="clearfix">
	<div class="bg-secondary padded">
		<div class="container">
			<div class="col-sm-12 col-md-12 exposed-container">
				<div class="search-title col-xs-12 np-x">
					{{ form.title }}
				</div>
				<div class="search-filters col-sm-12 np-x">
					<div class="d-flex justify-between col-sm-12 col-md-12 np-x">
						{{ form.type }}
						{{ form.business }}
						{{ form.category }}
						{{ form.items_per_page }}
						{{form.actions}}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container d-flex justify-end sort-filters">
		{{form|without(exclude)}}
	</div>
</div>
