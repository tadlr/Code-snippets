<div class='container'>
  <div class='row'>
    <div class='column col-sm-12 col-lg-6 column-content py-100'>
      <div class='{{innerClass}}'>
        {% set content_area = field.content_area %}
        {% if content_area %}
          <div class='row'>
            <div class='col-sm-12 col-md-6 col-lg-12'>
              {% if content_area.heading %}
                {{ content_area.heading }}
              {% endif %}
            </div>
            <div class='column col-sm-12 col-md-6 col-lg-6 section-image d-mobile-none d-lg-none'>
              <div class='column-inner'>
                {% if field.design == 'ae' %}
                  <div class='image'>
                    {{ Image(field.bg_image, 'full',  {width: 800, height: 425, class: 'media-lander w-100'}) }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
          {% if content_area.content %}
            {{ content_area.content }}
          {% endif %}
          {% if content_area.cta %}
            <div class='phone-cta'>
              {% if content_area.cta.phone_icon %}
                <svg
                  class='phone-icon'
                  role='graphics-document'
                  aria-label='phone icon'
                  alt='phone icon'
                  width='48'
                  height='49'
                  viewbox='0 0 48 49'
                  fill='none'
                  xmlns='http://www.w3.org/2000/svg'
                >
                  <g clip-path="url(#clip0_163_310)">
