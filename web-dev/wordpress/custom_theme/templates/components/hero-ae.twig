                  <defs>
                  	<clipPath id="clip0_163_310">
                  		<rect width="48" height="48" fill="white" transform="translate(0 0.65918)"/>
                  	</clipPath>
                  </defs>
                </svg>
              {% endif %}
              {{ content_area.cta.cta_text }}
              {% set btnColour = field.design == 'ad'? 'white': 'blue' %}
              {% include 'field/field--cta-btn.twig' %}
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
    {% include 'hero-image.twig' %}
  </div>
</div>
