{% if is_preview %}
  [I] Rate Guarantee
{% endif %}
{% set classes = field.full_width_with_background == 'Yes' ? 'full-width-bg' : '' %}
{% set heading = field.heading %}
{% set content = field.text_content %}
{% set imagePosition = field.image_position %}
{% set quote = field.quote %}
<div
  id='{{ sectionID }}'
  class='content-block-holder {{ classes }} sk-block block--i'
  data-link-scroll-target-section-id='{{sectionID}}'
>
  <div class='container'>
    <div class='circle-info-white-block content-block row row-eq-height'>
      <div class='txt-content op-0 col-sm-12 col-lg-5'>
        {% if heading %}
          <h2>
            {{ heading|striptags('<br><span>') }}
          </h2>
        {% endif %}
        <div class='mt-3'>
          {{ content | raw }}
        </div>
        {% include 'field/field--cta-btn.twig' %}
      </div>
      <div class='img-txt-col op-0 col-sm-12 col-lg-7'>
        <div class='inner-content'>
          <div class='img-wrap'>
            {{ Image(field.image, 'img-450-450', {width: 450, height: 450, class:"info-white-section-img"}) }}
            <div class='arc-border-pink abs-cover-el'></div>
            <div class='arc-light-pink abs-cover-el'></div>
          </div>
          <div class='img-txt-content'>
            <div class='inner-text'>
              <p class='img-txt-quote'>
                {{ quote.quote_text }}
              </p>
              <div class='quote-details'>
                <p class='img-txt-col-person-name'>
                  {{ quote.quote_author }}
                </p>
                <p class='img-txt-col-person-position'>
                  {{ quote.author_position }}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
