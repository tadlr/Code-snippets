{% if is_preview %}
  [P] 50/50 text and image
{% endif %}
{% set classes = field.full_width_with_background == 'Yes' ? 'full-width-bg' : '' %}
{% set imgWrapClass = field.alternative ? 'img-alt' : '' %}
{% set heading = row.heading %}
{% set headingColor = row.heading_color %}
{% set headingH1 = row.make_heading_h1 %}
{% set content = field.text_content %}
{% set imagePosition = field.image_position %}
{% set extra_classes = field.section_classes %}

<div
  id='{{ sectionID }}'
  class='content-block-holder {{ classes }} {{ extra_classes }} sk-block block--p media-content-block'
  data-link-scroll-target-section-id='{{sectionID}}'
>
  <div class='container'>
    <div class='media-block media-{{ imagePosition }} video-media content-block row row-eq-height'>
      <div class='txt-content op-0 col-sm-12 col-lg-6 animated fadeIn'>
        {% if heading %}
          {% if headingH1 == 'yes' %}
            <h1 style='color:{{ headingColor }}'>
              {{ heading|striptags('<br><span>') }}
            </h1>
          {% else %}
            <h2 style='color:{{ headingColor }}'>
              {{ heading|striptags('<br><span>') }}
            </h2>
          {% endif %}
        {% endif %}
        <div class='mt-3'>
          {{ content | raw }}
        </div>
        {% include 'field/field--cta-btn.twig' %}

        {% if cta_text_2 %}
          {% set cta_text = cta_text_2 %}
          {% set external_link = external_link_2 %}
          {% set cta_link = cta_link_2 %}
          {% set phone = phone_2 %}
          {% set cta_scroll_to_section = cta_scroll_to_section_2 %}
          {{ include('field/field--cta-btn.twig') }}
        {% endif %}
      </div>
      <div class='img-wrap col-sm-12 d-flex justify-content-center col-lg-6 h-100 {{imgWrapClass}}'>
        <div class='img-content'>
          {% if field.image %}
            {% if field.alternative %}
              {{ Image(field.image, 'img-800-800', {'width':800, 'height': 800, class:'animated zoomIn'}) }}
            {% else %}
              {{ Image(field.image, 'img-450-450', {'width':450, 'height': 450, class:'animated zoomIn'}) }}
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
