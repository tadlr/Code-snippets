{# Block--v #}
{% extends 'block-sk-block-base.twig' %}
{% block block_content %}
  <div class='partners-section-home prel slider-arrows'>
    <div
      class='prel op-0 '
    >
      {#     <div class='content-wrap prel'> #}
      <div class='container'>
        {% if field.top_heading %}
          <p class='pre-title'>
            {{ field.top_heading }}
          </p>
        {% endif %}

        {% if field.main_heading %}
          <h2>
            <span aria-hidden='true' class='mt-3'>
              {{ field.main_heading }}
            </span>
          </h2>
        {% endif %}

        {% if field.content %}
          {{ field.content }}
        {% endif %}
      </div>
      <div class='container d-none d-desktop px-0 pt-4'>
        <div class='row d-flex justify-content-around align-items-start'>
          {% for index,partner in field.partner_logos %}
            {% set partnerName = partner.partner_name %}
            {% set partnerLink = partner.external_link %}
            {% if partner.external_link %}
              <a
                href='{{ partnerLink }}'
                rel='noopener noreferrer'
                target='_blank'
                class='partner-item col-xs-2 col-md-4 col-lg-2 py-3 px-2 text-center'
              >
                {{ Image(partner.logo, 'img-200-65', {width: 200, height: 65, class: "partner-img colored-img dont-show"}) }}
              </a>
            {% else %}
              <div class='partner-item col-xs-2 col-md-4 col-lg-2 py-3 px-2  text-center'>
                {{ Image(partner.logo, 'img-200-65', {width: 200, height: 65, class: "partner-img colored-img dont-show"}) }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class='d-none d-tablet-block d-mobile-block'>
        <div class='container'>
          <div class='table-multi-block content-block multi-column-table mt-1'>
            <div class='mb-table-container'>
              <button class='slider-control blaze-prev d-none d-tablet-block d-mobile-block' data-btn-for='{{uid}}'>
                {{ 'prev' | t }}
              </button>
              <div
                class='mb-table mb-multi-compare'
                id='{{uid}}'
                data-slides-767='2'
                data-slides-992='3'
                data-slides-1024='4'
              >
                <div class='blaze-container blaze-slider'>
                  <div class='blaze-track-container'>
                    {{ '<div class="blaze-track">' }}
                    {% set totalItems = field.partner_logos|length %}
                    {% for index,partner in field.partner_logos %}
                      {% if index % 3 == 0 %}
                        {% if index != 0 %}
                          {{ '</div>' }}
                        {% endif %}
                        {{ '<div class="mt-box-inner">' }}
                      {% endif %}
                      {% set partnerName = partner.partner_name %}
                      {% set partnerLink = partner.external_link %}
                      {% if partner.external_link %}
                        <a
                          href='{{ partnerLink }}'
                          rel='noopener noreferrer'
                          target='_blank'
                          class='partner-item text-center'
                        >
                          {{ Image(partner.logo, 'img-200-65', {width: 200, height: 65, class: "partner-img colored-img dont-show py-3"}) }}
                        </a>
                      {% else %}
                        <div class='partner-item text-center'>
                          {{ Image(partner.logo, 'img-200-65', {width: 200, height: 65, class: "partner-img colored-img dont-show py-3"}) }}
                        </div>
                      {% endif %}
                      {% if loop.last and totalItems % 3 != 0 %}
                        {{ '</div>' }}
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
                <div class='pagination-wrapper'>
                  <div class='blaze-pagination'></div>
                </div>
              </div>
              <button class='slider-control blaze-next d-none d-tablet-block d-mobile-block' data-btn-for='{{uid}}'>
                {{ 'next' | t }}
              </button>
            </div>
          </div>
        </div>
      </div>
      {#     </div> #}
    </div>
  </div>
{% endblock %}
