{% if is_preview %}
  [T] Call to action area
{% endif %}
{% set heading = row.heading %}
{% set headingColor = row.heading_color %}
{% set headingH1 = row.make_heading_h1 %}
{% set content = field.text_content %}
{% set imagePosition = field.image_position %}
<section
  id='{{ sectionID }}'
  class='content-block-holder cta-area sk-block block--t media-content-block'
  data-link-scroll-target-section-id='{{sectionID}}'
>
  <div class='container'>
    <div class='media-block media-{{ imagePosition }} video-media content-block row row-eq-height'>
      <div class='txt-content op-0 col-sm-12  col-lg-6'>
        {% if heading %}
          {% if headingH1 == 'yes' %}
            <h1 style='color:{{ headingColor }}'>
              {{ heading|striptags('<br><span>') }}
            </h1>
          {% else %}
            <h2 style='color:{{ headingColor }}'>
              {{ heading|striptags('<br><span>') }}
            </h2>
          {% endif %}
        {% endif %}
        <div class='mt-3'>
          {{ content | raw }}
        </div>
        {% set btnColour = 'blue' %}
        {% include 'field/field--cta-btn.twig' %}
      </div>
      <div class='img-wrap col-sm-12 d-flex justify-content-center col-lg-6 h-100'>
        <div class='img-content'>
          {% if field.image %}
            {{ Image(field.image, 'img-450-450', {'width':450, 'height': 450}) }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
