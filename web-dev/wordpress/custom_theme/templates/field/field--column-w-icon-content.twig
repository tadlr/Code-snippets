<div class='icons--item {{class}}'>
  {% if image %}
    {% if field.use_img %}
      <div class='img--container'>
        {{ Image(image, 'img-300-300', {class: "f-image", 'width':300, 'height': 300}) }}
      </div>
    {% else %}
      <div class='img--wrap'>
        {{ Image(image, 'img-100-100', {'width':100, 'height': 100}) }}
      </div>
    {% endif %}
  {% endif %}
  <h3 class='list-title'>
    {{ heading }}
  </h3>
  {{ content | raw }}
</div>
