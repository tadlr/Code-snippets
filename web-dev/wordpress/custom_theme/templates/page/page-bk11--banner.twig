{% extends "block-sk-block-base.twig" %}

{% block block_base %}
  {# {% set attributes = attributes.addClass('bg-blue', 'sk-case-studies') %} #}
  {{ parent() }}
{% endblock %}

{% block block_content %}
  {% set bgImage = wp_get_attachment_image_url(field.background, 'hero-article') %}
  <div class='container text-white'>
    <div class='txt-content col-sm-12'>
      <div class='bg-wrapper w-100' style="background-image: url('{{bgImage}}');">
        <div class='content-wrapper'>
          {{ Image(field.image_content, 'full', {"width":"100%", height: "auto" }) }}
        </div>
      </div>
      <div class='button-wrapper'>
        {% set btnColour = 'blue' %}
        {% include 'field/field--cta-btn.twig' %}
      </div>
    </div>
  </div>
{% endblock %}
